<?xml version="1.0" encoding="windows-1252" ?>
<project xmlns="http://maven.apache.org/POM/4.0.0">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>us.co.state.cde</groupId>
        <artifactId>cde-parent</artifactId>
        <version>1.0.0</version>
    </parent>
    <properties>
        <project.name>STEQ</project.name>
        <web.app.name>steq</web.app.name>
        <app.version>1.0</app.version>
        <svnUrl>https://svn.cde.state.co.us/svn/</svnUrl>
        <svnProject>state_equal/</svnProject>
        <svnSource>trunk/cdoe</svnSource>
        <svnTag>tag</svnTag>
    </properties>
    <scm>
        <developerConnection>scm:svn:${svnUrl}/${svnProject}/${svnSource}</developerConnection>
        <url>${svnUrl}</url>
    </scm>
    <name>${web.app.name}-ApplicationEAR</name>
    <groupId>us.co.state.cde</groupId>
    <artifactId>${web.app.name}-ear</artifactId>
    <version>1.0</version>
    <packaging>ear</packaging>
    <build>
        <finalName>${web.app.name}</finalName>
        <defaultGoal>package</defaultGoal>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <configuration>
                    <generateApplicationXml>true</generateApplicationXml>
                    <outputDirectory>/build/Applications/${web.app.name}</outputDirectory>
                    <modules>
                        <!--  Include Web Application Module. -->
                        <webModule>
                            <groupId>${project.groupId}</groupId>
                            <artifactId>steq-web</artifactId>
                            <contextRoot>/equal</contextRoot>
                        </webModule>
                    </modules>
                    <archive>
                        <manifest>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                        </manifest>
                        <manifestEntries>
                            <Implementation-Version>${buildVersion}</Implementation-Version>
                            <Build-Timestamp>${buildDateTime}</Build-Timestamp>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>buildnumber-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>generate-buildnumber</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>create</goal>
                        </goals>
                        <configuration>
                            <useLastCommittedRevision>false</useLastCommittedRevision>
                            <getRevisionOnlyOnce>true</getRevisionOnlyOnce>
                            <buildNumberPropertyName>buildRevision</buildNumberPropertyName>
                            <scmDirectory>./</scmDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-buildtimestamp</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>create</goal>
                        </goals>
                        <configuration>
                            <format>{0,date,yyyy-MM-dd HH:mm:ss}</format>
                            <items>
                                <item>timestamp</item>
                            </items>
                            <buildNumberPropertyName>buildDateTime</buildNumberPropertyName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-timestamp</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>create</goal>
                        </goals>
                        <configuration>
                            <format>{0,date,yyyyMMdd}</format>
                            <items>
                                <item>timestamp</item>
                            </items>
                            <buildNumberPropertyName>buildDate</buildNumberPropertyName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generate-versionnumber</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>create</goal>
                        </goals>
                        <configuration>
                            <format>V_{0}_{1}</format>
                            <items>
                                <item>${buildDate}</item>
                                <item>${buildRevision}</item>
                            </items>
                            <buildNumberPropertyName>buildVersion</buildNumberPropertyName>
                            <revisionOnScmFailure>UNKOWN_NUM</revisionOnScmFailure>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>steq-web</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
    </dependencies>
</project>
